<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/cream_white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="@dimen/dimen_small"
        android:layout_marginBottom="@dimen/dimen_small"
        android:layout_marginLeft="@dimen/dimen_large"
        android:layout_width="80dp"
        android:background="@color/light_gray_transparent"
        android:id="@+id/iv_cover_item_directory"
        android:layout_height="80dp" />
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_large"
        android:layout_marginRight="@dimen/dimen_large"
        android:layout_height="1px"
        android:layout_below="@id/iv_cover_item_directory"
        android:background="@color/light_gray"
       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_large"
        android:layout_toRightOf="@id/iv_cover_item_directory"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="name"
            android:singleLine="true"
            android:id="@+id/tv_name_item_dir"
            android:textColor="@color/black_87"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="126å¼ "
            android:singleLine="true"
            android:id="@+id/tv_count_item_dir"
            android:layout_marginTop="@dimen/dimen_tiny"
            android:textColor="@color/black_50"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_tag_item_dir"
        android:layout_width="wrap_content"
        android:src="@drawable/multi_image_done_grey600_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_large"
        android:layout_height="wrap_content" />


</RelativeLayout>