<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/root_bottom_layout"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:clickable="false"
    android:orientation="horizontal">

    <com.tiny.framework.view.ProgressWheel
        android:id="@+id/pb_loading_bottom"
        android:background="@null"

        wheel:matProg_barColor="?attr/colorPrimary"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_rimColor="@color/light_gray_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_loading_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:padding="8dp"
        android:text="@string/_loading" />

</LinearLayout>