<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="24dp">


    <com.tiny.framework.view.ProgressWheel
            android:layout_width="60dp"
            android:id="@+id/pb_ui_dialog"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            wheel:matProg_progressIndeterminate="true"
            android:background="@null"
            wheel:matProg_rimColor="@color/custom_transparent"
            wheel:matProg_barColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/txt_prompt_ui_dialog"
            android:layout_marginLeft="@dimen/dimen_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中" />
    </LinearLayout>
